        />
-->
        <include android:id="@+id/actionBar"
            layout="@layout/actionbar"
            >
        </include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingTop="@dimen/paddingTop"
        >

        <ImageButton
            android:id="@+id/botonIrMapas01"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:src="@drawable/grasshopper_48"
            android:background="@color/colorAccent"
            android:onClick="irMapa01"
            />

        <ImageButton
            android:id="@+id/botonIrMapas02"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:src="@drawable/museum_48"
            android:background="@color/colorAccent"
            android:onClick="irMapa02"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingTop="@dimen/paddingTop"
        >

        <ImageButton
            android:id="@+id/botonIrMapas03"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:src="@drawable/student_male_48"
            android:background="@color/colorAccent"
            android:onClick="irMapa03"
            />

        <ImageButton
            android:id="@+id/botonIrMapas04"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:src="@drawable/water_element_48"
            android:background="@color/colorAccent"
            android:onClick="irMapa04"
            />

    </LinearLayout>


</LinearLayout>
